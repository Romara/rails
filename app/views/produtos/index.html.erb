 <table>
 	<thead> <!-- cabeçalho da tabela -->
 		<tr>
 			<th>Nome</th>
 			<th>Descrição</th>
 			<th>Preço</th>
 			<th>Quantidade</th>
 		</tr>
 		
 	</thead>
 	<tbody>
 	<% todos = Produto.order :nome %>
 	<% todos.each do |produto| %>
 	<tr>
 		<td> <%= produto.nome %> </td>
 		<td> <%= produto.descricao %> </td>
 		<td> <%= produto.preco %> </td>
 		<td> <%= produto.quantidade %> </td>
 	</tr>
 	<% end %>
 	</tbody>

 </table>
</body>
</html>